{
  "name": "linter-puppet-linting",
  "main": "./lib/main.js",
  "version": "1.0.0",
  "description": "Puppet linting via Puppet-Lint (formerly linter-puppet-lint)",
  "repository": "https://github.com/mschuchard/linter-puppet-linting",
  "license": "MIT",
  "private": true,
  "keywords": [
    "lint",
    "linter",
    "puppet",
    "puppet-lint"
  ],
  "scripts": {
    "test": "pulsar --test spec"
  },
  "bugs": {
    "url": "https://github.com/mschuchard/linter-puppet-linting/issues"
  },
  "engines": {
    "atom": ">=1.4.0 <2.0.0"
  },
  "providedServices": {
    "linter": {
      "versions": {
        "2.0.0": "provideLinter"
      }
    }
  },
  "readmeFilename": "README.md",
  "dependencies": {
    "atom-linter": "10.0.0"
  },
  "devDependencies": {
    "eslint": "latest",
    "eslint-config-airbnb-base": "latest",
    "eslint-plugin-import": "latest"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "pulsar"
          ]
        }
      ]
    },
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "pulsar": false
    }
  },
  "configSchema": {
    "executablePath": {
      "title": "Executable Path",
      "type": "string",
      "description": "Path to puppet-lint executable",
      "default": "puppet-lint"
    },
    "automaticFix": {
      "title": "Automatic Fix",
      "type": "boolean",
      "description": "Attempt to automatically fix warnings and errors",
      "default": false
    },
    "errorLevel": {
      "title": "Error Level",
      "type": "string",
      "description": "The level of error to return (warning, error, or all).",
      "default": "all"
    },
    "customChecks": {
      "title": "Custom Checks File",
      "type": "string",
      "description": "Path to a file containing custom Puppet Lint checks.",
      "default": ""
    },
    "checkFlags": {
      "title": "Check Flags",
      "type": "string",
      "description": "List of comma-delimited check flags (e.g. --80chars-check,--no-140chars-check).",
      "default": ""
    }
  }
}
